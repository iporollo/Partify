<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSongCover"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/txtSongArtist"
        android:layout_below="@+id/txtSongTitle"
        android:layout_alignLeft="@+id/txtSongTitle"
        android:layout_alignStart="@+id/txtSongTitle"
        android:text="Artist Title here"
        android:textStyle="normal|italic"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/txtSongTitle"
        android:text="Song title here"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgSongCover"
        android:layout_toEndOf="@+id/imgSongCover"
        android:textAlignment="viewStart"
        android:textSize="18sp" />

    <!--<ProgressBar-->
